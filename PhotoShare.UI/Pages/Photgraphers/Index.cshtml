@page
@model PhotoShare.Areas.Identity.Pages.Photgraphers.IndexModel
@{

    var userRoleToRegister = new Dictionary<string, string>
{
                { "UserRoleToRegister", "Photographer" }
    };

    bool isPhotographer = User.IsInRole("Photographer");
}

<link href="~/css/profileCards.css" rel="stylesheet" />

<form asp-page="./Index" method="get">
    <div class="form-actions no-color">

        <div class="wrap">
            <div class="search">
                <input type="text" class="searchTerm" name="SearchString" value="@Model.NameFilter" placeholder="What are you looking for?" />
                <input type="submit" class="searchButton" value="Search" />
            </div>
        </div>
    </div>
</form>
<div id="map_canvas"></div>

<h1>Index</h1>
<div class="page-content page-container main-proifle-container" style="" id="page-content">
    <div class="row">
        @foreach (var item in Model.Users)
        {
            string base64;
            string imgSrc;

            if (item.ProfilePic != null)
            {
                base64 = Convert.ToBase64String(item.ProfilePic);
                imgSrc = String.Format("data:image/gif;base64,{0}", base64);
            }
            else
            {
                imgSrc = "https://bootdey.com/img/Content/avatar/avatar7.png";
            }


            <div class="col-sm-6">
                <div class="user-card-full" >
                    <div class="row m-l-0 m-r-0">
                        <div class="col-sm-4 bg-c-lite-green user-profile">
                            <div class="card-block text-center text-white">
                                <div class="m-b-25">
                
                                        <img  src="@imgSrc" class="img-radius" alt="User-Profile-Image">
  
                                </div>
                                <h6 class="f-w-600"> @Html.DisplayFor(modelItem => item.Name)</h6>
                                <p> @Html.DisplayFor(modelItem => item.City)</p> <i class=" mdi mdi-square-edit-outline feather icon-edit m-t-10 f-16"></i>
                            </div>
                        </div>
                        <div class="col-sm-8">
                            <div class="card-block">
                                <h6 class="m-b-20 p-b-5 b-b-default f-w-600">Information</h6>
                                <div class="row">
                                    <div class="col-sm-6">
                                        <p class="m-b-10 f-w-600">Email</p>
                                        <h6 class="text-muted f-w-400"> @Html.DisplayFor(modelItem => item.Email)</h6>
                                    </div>
                                    <div class="col-sm-6">
                                        <p class="m-b-10 f-w-600">Phone</p>
                                        <h6 class="text-muted f-w-400"> @Html.DisplayFor(modelItem => item.PhoneNumber)</h6>
                                    </div>
                                </div>
                                <ul class="social-link list-unstyled m-t-40 m-b-10">
                                    <li><a href="#!" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="facebook" data-abc="true"><i class="mdi mdi-facebook feather icon-facebook facebook" aria-hidden="true"></i></a></li>
                                    <li><a href="#!" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="twitter" data-abc="true"><i class="mdi mdi-twitter feather icon-twitter twitter" aria-hidden="true"></i></a></li>
                                    <li><a href="#!" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="instagram" data-abc="true"><i class="mdi mdi-instagram feather icon-instagram instagram" aria-hidden="true"></i></a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        }
    </div>
</div>