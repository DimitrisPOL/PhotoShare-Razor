@page
@using PhotoShare.ViewComponents
@using PhotoShare.Views.Shared.Components.AdminMenu
@model PhotoShare.Pages.Country.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Create</h1>
<link href="~/css/simple-sidebar.css" rel="stylesheet" />
<div class="d-flex" id="wrapper">

    @await Component.InvokeAsync("AdminMenu", new AdminMenuViewModel(typeof(CreateModel).Namespace))

    <div id="page-content-wrapper">

        @{
            await Html.RenderPartialAsync("_ToggleMenuPartial");
        }


        <h4>Country</h4>

        <div class="row">
            <div class="col-md-4">
                <form method="post" style="float:left;">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Country.Name" class="control-label"></label>
                        <input asp-for="Country.Name" class="form-control" />
                        <span asp-validation-for="Country.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Country.TelephonePrefix1" class="control-label"></label>
                        <input asp-for="Country.TelephonePrefix1" class="form-control" />
                        <span asp-validation-for="Country.TelephonePrefix1" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-page="Index">Back to List</a>
        </div>

    </div>

</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<!-- Menu Toggle Script -->
<script>
    $("#menu-toggle").click(function (e) {
        e.preventDefault();
        $("#wrapper").toggleClass("toggled");
    });
</script>