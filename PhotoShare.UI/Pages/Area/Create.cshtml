@page
@using PhotoShare.Views.Shared.Components.AdminMenu
@model PhotoShare.Pages.Area.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Area</h4>
<link href="~/css/simple-sidebar.css" rel="stylesheet" />
<div class="d-flex" id="wrapper">

    <!-- Sidebar -->

    @await Component.InvokeAsync("AdminMenu", new AdminMenuViewModel(typeof(CreateModel).Namespace))

    <div id="page-content-wrapper">

        @{
            await Html.RenderPartialAsync("_ToggleMenuPartial");
        }

        <div class="row">
            <div class="col-md-4">
                @{
                    await Html.RenderPartialAsync("_FormErrorMessagePartial", Model.ErrorMessage);
                }
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Area.Name" class="control-label"></label>
                        <input asp-for="Area.Name" class="form-control" />
                        <span asp-validation-for="Area.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Area.TelephonePrefix1" class="control-label"></label>
                        <input asp-for="Area.TelephonePrefix1" class="form-control" />
                        <span asp-validation-for="Area.TelephonePrefix1" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ProvinceID" class="control-label">Provine</label>
                        <select asp-for="ProvinceID" asp-items="@Model.Cities" class="form-control">
                            <option value="">Choose a day</option>
                        </select>
                        <span asp-validation-for="ProvinceID" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-page="Index">Back to List</a>
        </div>

        </div>
        </div>

        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
