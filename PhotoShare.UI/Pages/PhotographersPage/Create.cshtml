@page
@model PhotoShare.Pages.Area.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Area</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Area.ID" class="control-label"></label>
                <input asp-for="Area.ID" class="form-control" />
                <span asp-validation-for="Area.ID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Area.Name" class="control-label"></label>
                <input asp-for="Area.Name" class="form-control" />
                <span asp-validation-for="Area.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Area.TelephonePrefix1" class="control-label"></label>
                <input asp-for="Area.TelephonePrefix1" class="form-control" />
                <span asp-validation-for="Area.TelephonePrefix1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Area.TelephonePrefix2" class="control-label"></label>
                <input asp-for="Area.TelephonePrefix2" class="form-control" />
                <span asp-validation-for="Area.TelephonePrefix2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Area.NumberOfOutposts" class="control-label"></label>
                <input asp-for="Area.NumberOfOutposts" class="form-control" />
                <span asp-validation-for="Area.NumberOfOutposts" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Area.NumberOfPictures" class="control-label"></label>
                <input asp-for="Area.NumberOfPictures" class="form-control" />
                <span asp-validation-for="Area.NumberOfPictures" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Area.NumberOfPhotographers" class="control-label"></label>
                <input asp-for="Area.NumberOfPhotographers" class="form-control" />
                <span asp-validation-for="Area.NumberOfPhotographers" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProvinceID" class="control-label"></label>
                <select asp-for="ProvinceID" asp-items="@Model.Cities" class="form-control">
                    <option value="">Choose a day</option>
                </select>
                <span asp-validation-for="Area.Country" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
