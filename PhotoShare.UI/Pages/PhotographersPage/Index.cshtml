@page
@model PhotoShare.Pages.PhotographersPage.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}


<link href="~/css/simple-sidebar.css" rel="stylesheet" />
<div class="d-flex" id="wrapper">

    <!-- Sidebar -->
    <div class="bg-light border-right" id="sidebar-wrapper">
        <div class="sidebar-heading">Start Bootstrap </div>
        <div class="list-group list-group-flush">
            <a asp-page="../Count/Index" class="list-group-item list-group-item-action bg-light">Countries</a>
            <a asp-page="../Prov/Index" class="list-group-item list-group-item-action bg-light">Provinces</a>
            <a asp-page="../PArea/Index" class="list-group-item list-group-item-action">Areas</a>
            <a asp-page="../Loc/Index" class="list-group-item list-group-item-action bg-light">Locations</a>
            <a asp-page="../PhotographersPage/Index" class="list-group-item list-group-item-action bg-light"  style="background-color: #69F0AE;">Users</a>
        </div>
    </div>
    <!-- /#sidebar-wrapper -->
    <!-- Page Content -->
    <div id="page-content-wrapper">

        <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
            <button class="btn btn-primary" id="menu-toggle">Toggle Menu</button>

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ml-auto mt-2 mt-lg-0">
                    <li class="nav-item active">
                        <a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Link</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Dropdown
                        </a>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="#">Action</a>
                            <a class="dropdown-item" href="#">Another action</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="#">Something else here</a>
                        </div>
                    </li>
                </ul>
            </div>
        </nav>

        <div class="container-fluid">

            <h1>Index</h1>

            <p>
                <a asp-area="" asp-page="/Photgraphers/RegisterPhotographer">Create New</a>
            </p>
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Users[0].Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Users[0].PhoneNumber)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Users[0].Email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Users[0].ProfilePic)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Users)
                    {
                        string base64;
                        string imgSrc;

                        bool isEmailConfirmed = item.EmailConfirmed;



                        if (item.ProfilePic != null)
                        {
                            base64 = Convert.ToBase64String(item.ProfilePic);
                            imgSrc = String.Format("data:image/gif;base64,{0}", base64);
                        }
                        else
                        {
                            imgSrc = "https://bootdey.com/img/Content/avatar/avatar7.png";
                        }

                        <tr>
                            <td>
                                
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PhoneNumber)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                <img style="width:30px;height:40px;" src="@imgSrc" class="img-radius" alt="User-Profile-Image">
                            </td>
                            <td>
                                @if (!item.EmailConfirmed || item.LockoutEnabled)
                                {
                                    <a asp-page-handler="Manage" asp-route-command="enable" asp-route-id="@item.Id">Enable User</a>
                                }
                                else
                                {
                                    <a asp-page-handler="Manage" asp-route-command="disable"  asp-route-id="@item.Id">Disable User</a>
                                }

                                @if (!item.EmailConfirmed)
                                {<a asp-page-handler="Manage" style="background-color:wheat;" asp-route-command="confirm" asp-route-id="@item.Id">Confirm User's Email</a>}
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>










</div>
<!-- /#wrapper -->
<!-- Bootstrap core JavaScript -->
<script src="vendor/jquery/jquery.min.js"></script>
<script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

<!-- Menu Toggle Script -->
<script>
    $("#menu-toggle").click(function (e) {
        e.preventDefault();
        $("#wrapper").toggleClass("toggled");
    });
</script>
