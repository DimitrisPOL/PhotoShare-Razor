@page
@using PhotoShare.Views.Shared.Components.AdminMenu
@model PhotoShare.Pages.Province.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Province</h4>
<link href="~/css/simple-sidebar.css" rel="stylesheet" />
<div class="d-flex" id="wrapper">

    @await Component.InvokeAsync("AdminMenu", new AdminMenuViewModel(typeof(CreateModel).Namespace))

    <div id="page-content-wrapper">

        @{
            await Html.RenderPartialAsync("_ToggleMenuPartial");
        }

        <div class="row">
            <div class="col-md-4">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Province.Name" class="control-label"></label>
                        <input asp-for="Province.Name" class="form-control" />
                        <span asp-validation-for="Province.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Province.TelephonePrefix1" class="control-label"></label>
                        <input asp-for="Province.TelephonePrefix1" class="form-control" />
                        <span asp-validation-for="Province.TelephonePrefix1" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Province.NumberOfOutposts" class="control-label"></label>
                        <input asp-for="Province.NumberOfOutposts" class="form-control" />
                        <span asp-validation-for="Province.NumberOfOutposts" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Province.NumberOfPictures" class="control-label"></label>
                        <input asp-for="Province.NumberOfPictures" class="form-control" />
                        <span asp-validation-for="Province.NumberOfPictures" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Province.NumberOfPhotographers" class="control-label"></label>
                        <input asp-for="Province.NumberOfPhotographers" class="form-control" />
                        <span asp-validation-for="Province.NumberOfPhotographers" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CountryId" class="control-label"></label>
                        <select asp-for="CountryId" asp-items="@Model.Cities" class="form-control">
                            <option value="">Choose a day</option>
                        </select>
                        <span asp-validation-for="Province.Country" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
        <div>
            <a asp-page="Index">Back to List</a>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<!-- Menu Toggle Script -->
<script>
    $("#menu-toggle").click(function (e) {
        e.preventDefault();
        $("#wrapper").toggleClass("toggled");
    });
</script>